# Qdrant Connection
QDRANT_URL=http://localhost:6333  # Change this to your Qdrant server URL
QDRANT_API_KEY=                   # Your Qdrant API key if authentication is enabled

# Collection Configuration
COLLECTION_NAME=steam_games_with_sparse_dense
CSV_FILE=jan-25-released-games copy.csv

# Embedding Models
EMBEDDING_MODEL=BAAI/bge-small-en-v1.5
SPARSE_MODEL=prithivida/Splade_PP_en_v1
VECTOR_SIZE=384

# API Configuration
PORT=8000
API_VERSION=1.0.0
ENABLE_RATE_LIMITING=false
DEFAULT_CACHE_DURATION=3600

# Keep-Alive Configuration
KEEPALIVE_INTERVAL=240  # 4 minutes in seconds
API_HOST=http://localhost:8000  # The base URL of your API for the keep-alive pings

# Batch Processing
BATCH_SIZE=100